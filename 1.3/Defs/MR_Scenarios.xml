    <IncidentDef>
      <defName>WandererJoin_CHunter_Scenario</defName>
      <label>join hunter</label>
      <category>Misc</category>
      <targetTags>
        <li>Map_PlayerHome</li>
      </targetTags>
      <workerClass>IncidentWorker_WandererJoin</workerClass>
      <letterLabel>join hunter: {PAWN_nameDef}</letterLabel>
      <letterText>the hunter has arrived.</letterText>
      <letterDef>PositiveEvent</letterDef>
      <baseChance>0</baseChance>
      <pawnKind>MRP_CHunter</pawnKind>
      <populationEffect>IncreaseEasy</populationEffect>
      <earliestDay>9999999</earliestDay>
      <minRefireDays>9999</minRefireDays>
    </IncidentDef>
	
	    <IncidentDef>
      <defName>WandererJoin_rentiq_Scenario</defName>
      <label>join decipher</label>
      <category>Misc</category>
      <targetTags>
        <li>Map_PlayerHome</li>
      </targetTags>
      <workerClass>IncidentWorker_WandererJoin</workerClass>
      <letterLabel>join decipher: {PAWN_nameDef}</letterLabel>
      <letterText>An decipher has heard of your fame and has joined the settlement.</letterText>
      <letterDef>PositiveEvent</letterDef>
      <baseChance>0</baseChance>
      <pawnKind>MRP_Deciphers_light</pawnKind>
      <populationEffect>IncreaseEasy</populationEffect>
      <earliestDay>1</earliestDay>
      <minRefireDays>1</minRefireDays>
    </IncidentDef>

	    <IncidentDef>
      <defName>WandererJoin_rentiqB_Scenario</defName>
      <label>join mountainranger</label>
      <category>Misc</category>
      <targetTags>
        <li>Map_PlayerHome</li>
      </targetTags>
      <workerClass>IncidentWorker_WandererJoin</workerClass>
      <letterLabel>join mountainranger: {PAWN_nameDef}</letterLabel>
      <letterText>Motivated by your progress, the mountainranger have joined the settlement.</letterText>
      <letterDef>PositiveEvent</letterDef>
      <baseChance>0</baseChance>
      <pawnKind>MRP_MountainRanger_light</pawnKind>
      <populationEffect>IncreaseEasy</populationEffect>
      <earliestDay>1</earliestDay>
      <minRefireDays>1</minRefireDays>
    </IncidentDef>
	
</Defs>
