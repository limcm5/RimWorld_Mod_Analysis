    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <statBases>
      <MaxHitPoints>750</MaxHitPoints>
      <WorkToBuild>18000</WorkToBuild>
      <Mass>800</Mass>
      <Flammability>1.0</Flammability>
      <ResearchSpeedFactor>1.25</ResearchSpeedFactor>
      <Beauty>250</Beauty>
    </statBases>
