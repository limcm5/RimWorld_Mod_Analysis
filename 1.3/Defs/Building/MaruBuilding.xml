<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BenchBase">
    <defName>MR_retrofittable</defName>
    <label>Retrofit Table</label>
    <description>This is a remodeling workbench for experimentally applying various techniques discovered through relics.\n\nIt looks like a pile of rubbish on the surface, but it has everything you need.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/MaruWorkbench</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.2,2.0)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>false</castEdgeShadows>
    <staticSunShadowHeight>0.0</staticSunShadowHeight>
    <costList>
      <Steel>150</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
      <MR_Sarira>4</MR_Sarira>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>3000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-2</Cleanliness>
    </statBases>
    <size>(3,2)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <recipes>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(73,123,138,0)</glowColor>
      </li>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>MaruRA2</li>
    </researchPrerequisites>
    <designationHotKey>Misc7</designationHotKey>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>MR_LenticularAnalyzer</defName>
    <label>Lenticular Analyzer</label>
    <description>This is a lens analyzer made for precise analysis.\n\nPrecisely crafted glass to guide the direction of light disrupts the light wave, creating a unique pattern on the surface of the lens.</description>
    <graphicData>
      <texPath>Things/Building/Analyzer/MR_LenticularAnalyzer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2.46875</drawSize>
    </graphicData>
    <rotatable>true</rotatable>
    <uiIconScale>0.85</uiIconScale>
    <researchPrerequisites>
      <li>MaruRB1</li>
    </researchPrerequisites>
    <size>(2,2)</size>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>false</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <designationHotKey>Misc4</designationHotKey>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>10000</WorkToBuild>
      <Mass>60</Mass>
      <Flammability>0.5</Flammability>
      <Beauty>150</Beauty>
    </statBases>
    <costList>
      <MR_Sarira>8</MR_Sarira>
      <ComponentIndustrial>5</ComponentIndustrial>
      <Gold>5</Gold>
      <Steel>45</Steel>
    </costList>
    <building>
      <buildingTags>
        <li>MaruResearch</li>
      </buildingTags>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(73,123,138,0)</glowColor>
      </li>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.08</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <maxDistance>6</maxDistance>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
  </ThingDef>
  
