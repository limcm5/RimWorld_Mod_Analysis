<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 <ThingDef ParentName="ArmorMachineableBase">
    <defName>MR_EBF</defName>
    <label>External bulletproof fibers</label>
    <description>It is a transparent bulletproof fiber that is applied over clothes. Movement becomes a bit uncomfortable, but you can get a decent level of defense.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <researchPrerequisite>MaruRB</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/ace/MR_aceA</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>4</Mass>
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>0.85</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.32</ArmorRating_Blunt>
      <ArmorRating_Heat>0.32</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.12</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories Inherit="false">
    <li>MRApparel</li>
    </thingCategories>
    <costList>
      <Cloth>50</Cloth>
      <Steel>50</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/ace/MR_In</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryBasic</li>
		<li>MR_EBF</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  

