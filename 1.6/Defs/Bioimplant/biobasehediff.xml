          <li>
            <capacity>Sight</capacity>
            <offset>0.10</offset> <!-- 시력 +10% -->
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.10</offset> <!-- 조작 +10% -->
          </li>
        </capMods>
