  <!-- 육지 산호 기반 이식체 (변이 활성제 사용 불가 예시) HediffDef -->
  <HediffDef>
    <defName>Hediff_LandCoralBase</defName>
    <label>Land Coral</label>
    <description>A stable implant, adjusted through Sari’s knowledge. Land coral lives symbiotically within the body, enhancing environmental adaptability and overall bodily homeostasis.\n\nIts assimilation rate increases more slowly, and it has a significant impact on the body. Furthermore, it does not react to mutation inducers.</description>
    <defaultLabelColor>(0.6, 0.8, 1.0)</defaultLabelColor>
    <hediffClass>HediffWithComps</hediffClass>
    <priceImpact>true</priceImpact>
    <countsAsAddedPartOrImplant>true</countsAsAddedPartOrImplant>
<!-- <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn> -->
    <isBad>false</isBad>
    <scenarioCanAdd>false</scenarioCanAdd>
    <minSeverity>0.001</minSeverity>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.01</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>0.016</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>Ⅰ</label>
        <minSeverity>0.01</minSeverity>
        <hungerRateFactorOffset>0.1</hungerRateFactorOffset>
        <statOffsets>
          <ImmunityGainSpeed>0.1</ImmunityGainSpeed> <!-- 항체생성 +10% -->
          <MaxNutrition>0.1</MaxNutrition> 
        </statOffsets>
      </li>
      <li>
        <label>Ⅱ</label>
        <minSeverity>0.16</minSeverity>
        <hungerRateFactorOffset>0.4</hungerRateFactorOffset>
        <statOffsets>
          <ImmunityGainSpeed>0.1</ImmunityGainSpeed> <!-- 항체생성 +10% -->
          <ComfyTemperatureMin>-5</ComfyTemperatureMin>
          <ComfyTemperatureMax>5</ComfyTemperatureMax>
          <MaxNutrition>0.4</MaxNutrition> 
        </statOffsets>
      </li>
      <li>
        <label>Ⅲ</label>
        <minSeverity>0.32</minSeverity>
        <hungerRateFactorOffset>0.7</hungerRateFactorOffset>
        <statOffsets>
          <ImmunityGainSpeed>0.15</ImmunityGainSpeed> <!-- 항체생성 +10% -->
          <ComfyTemperatureMin>-5</ComfyTemperatureMin>
          <ComfyTemperatureMax>10</ComfyTemperatureMax>
          <MaxNutrition>0.7</MaxNutrition> 
        </statOffsets>
      </li>
      <li>
        <label>Ⅳ</label>
        <minSeverity>0.48</minSeverity>
        <hungerRateFactorOffset>1.0</hungerRateFactorOffset>
        <statOffsets>
          <ImmunityGainSpeed>0.15</ImmunityGainSpeed> <!-- 항체생성 +10% -->
          <ComfyTemperatureMin>-10</ComfyTemperatureMin>
          <ComfyTemperatureMax>10</ComfyTemperatureMax>
          <MaxNutrition>1</MaxNutrition> 
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset> <!-- 의식 +10% -->
          </li>
        </capMods>
      </li>
      <li>
        <label>Ⅴ</label>
        <minSeverity>0.64</minSeverity>
        <hungerRateFactorOffset>1.4</hungerRateFactorOffset>
        <statOffsets>
          <ImmunityGainSpeed>0.2</ImmunityGainSpeed> <!-- 항체생성 +10% -->
          <ComfyTemperatureMin>-10</ComfyTemperatureMin>
          <ComfyTemperatureMax>15</ComfyTemperatureMax>
          <MaxNutrition>1.4</MaxNutrition> 
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset> <!-- 의식 +10% -->
          </li>
        </capMods>
      </li>
      <li>
        <label>Ⅵ</label>
        <minSeverity>0.8</minSeverity>
        <hungerRateFactorOffset>1.8</hungerRateFactorOffset>
        <statOffsets>
          <ImmunityGainSpeed>0.2</ImmunityGainSpeed> <!-- 항체생성 +10% -->
          <ComfyTemperatureMin>-10</ComfyTemperatureMin>
          <ComfyTemperatureMax>15</ComfyTemperatureMax>
          <MaxNutrition>1.8</MaxNutrition> 
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.15</offset> <!-- 의식 +15% -->
          </li>
        </capMods>
      </li>
      <li>
        <label>Full Assimilation</label>
        <minSeverity>0.96</minSeverity>
        <hungerRateFactorOffset>2.0</hungerRateFactorOffset>
        <statOffsets>
          <ImmunityGainSpeed>0.2</ImmunityGainSpeed>
          <ComfyTemperatureMin>-10</ComfyTemperatureMin>
          <ComfyTemperatureMax>20</ComfyTemperatureMax>
          <MaxNutrition>2</MaxNutrition> 
        </statOffsets>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.15</offset> <!-- 의식 +15% -->
          </li>
        </capMods>
		<hediffGivers>
        <li Class="HediffGiver_Random">
          <hediff>Hediff_LandCoral_Reword</hediff> <!-- 부여할 헤디프 DefName -->
          <mtbDays>1.0</mtbDays>             <!-- 평균 1일마다 발생 시도 -->
        </li>
      </hediffGivers>
		  <makeImmuneTo>
            <li>MuscleParasites</li>
            <li>GutWorms</li>
          </makeImmuneTo>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>Hediff_LandCoral_Reword</defName>
    <label>Land Coral Bloom</label>
    <description>This body has achieved perfect assimilation with the land coral. Now, should any wound be sustained, symbiotic algae will maintain the body’s homeostasis, slowly mending and fully restoring the affected area.</description>
    <hediffClass>HediffWithComps</hediffClass> <!-- 일반 헤디프 -->
    <defaultLabelColor>(0.8, 1.0, 0.4)</defaultLabelColor>
    <isBad>false</isBad>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity> <!-- 단일 단계 변이 -->
    <comps>
      <li Class="HediffCompProperties_HealPermanentWounds" />
    </comps>
    <stages>
      <li>
			<statOffsets>
			<InjuryHealingFactor>2</InjuryHealingFactor>
			</statOffsets>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.10</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
</Defs>