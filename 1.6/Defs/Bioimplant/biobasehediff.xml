<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 <HediffDef ParentName="ImplantHediffBase">
    <defName>Hediff_SymbioticInfectionBase</defName>
    <label>Symbiotic Organism Infection</label>
    <description>A standard implant, adjusted through Sari’s knowledge. Microscopic symbiotic organisms infect the entire body, beginning to alter physical capabilities.\n\nThe assimilation rate gradually increases over time, affecting the body accordingly.</description>
<!-- <spawnThingOnRemoved>YourMod_SymbioticRemnants</spawnThingOnRemoved> --> <!-- 제거 시 나올 잔해물 -->
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <isBad>false</isBad>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.01</initialSeverity> <!-- 초기 이식 시 동화율 -->
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>0.064</severityPerDay>
      </li>
    <!-- 
      <li Class="YourModNamespace.HediffCompProperties_BaseImplantTracker"/> // 필요하다면 동화율 외 추가 정보 추적용
     -->
    </comps>
    <stages>
      <li>
        <label>Ⅰ</label>
        <minSeverity>0.01</minSeverity>
        <hungerRateFactorOffset>0.5</hungerRateFactorOffset>
        <statOffsets>
          <MoveSpeed>0.1</MoveSpeed> <!-- 이동속도 +0.1c/s (예시) -->
          <MaxNutrition>0.5</MaxNutrition> 
        </statOffsets>
      </li>
      <li>
        <label>Ⅱ</label>
        <minSeverity>0.5</minSeverity> <!-- 예시 동화율 -->
        <hungerRateFactorOffset>1.0</hungerRateFactorOffset>
        <statOffsets>
          <MoveSpeed>0.2</MoveSpeed>
          <MeleeDodgeChance>0.1</MeleeDodgeChance>
          <MaxNutrition>1</MaxNutrition> 
        </statOffsets>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>Full Assimilation</label>
        <minSeverity>0.999</minSeverity> <!-- 예시 동화율 -->
        <hungerRateFactorOffset>1.5</hungerRateFactorOffset>
        <statOffsets>
          <MoveSpeed>0.3</MoveSpeed>
          <MeleeDodgeChance>0.3</MeleeDodgeChance>
          <MaxNutrition>1.5</MaxNutrition> 
        </statOffsets>
         <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.10</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="ImplantHediffBase">
    <defName>Hediff_CrystalMutationBase</defName>
    <label>결정 변이</label>
    <description>.</description>
<!-- <spawnThingOnRemoved>YourMod_SymbioticRemnants</spawnThingOnRemoved> --> <!-- 제거 시 나올 잔해물 -->
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <isBad>false</isBad>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>0.01</initialSeverity> <!-- 초기 이식 시 동화율 -->
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>0.064</severityPerDay>
      </li>
    <!-- 
      <li Class="YourModNamespace.HediffCompProperties_BaseImplantTracker"/> // 필요하다면 동화율 외 추가 정보 추적용
     -->
    </comps>
    <stages>
      <li>
        <label>Ⅰ</label>
        <minSeverity>0.01</minSeverity>
        <statOffsets>
          <MoveSpeed>0.1</MoveSpeed> <!-- 이동속도 +0.1c/s (예시) -->
        </statOffsets>
      </li>
      <li>
        <label>Ⅱ</label>
        <minSeverity>0.5</minSeverity> <!-- 예시 동화율 -->
        <statOffsets>
          <MoveSpeed>0.2</MoveSpeed>
          <MeleeDodgeChance>0.1</MeleeDodgeChance> <!-- 근접 회피 +10% -->
        </statOffsets>
        <capMods>
          <li>
