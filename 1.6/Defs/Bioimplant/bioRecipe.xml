<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <RecipeDef Name="MR_SurgeryInstallImplantBase" ParentName="SurgeryFlesh" Abstract="True">
    <workerClass>Recipe_InstallImplant</workerClass>
    <workAmount>2500</workAmount>
    <developmentalStageFilter>Child, Adult</developmentalStageFilter>
    <skillRequirements>
      <Medicine>5</Medicine>
    </skillRequirements>
    <recipeUsers>
      <li>Maru</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter><categories><li>Medicine</li></categories></filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef ParentName="MR_SurgeryInstallImplantBase">
    <defName>Install_SymbioticInfectionBase</defName>
    <label>Symbiotic Organism Transplant</label>
    <description>Transplants a ‘Symbiotic Organism’ base implant.</description>
    <jobString>Transplanting symbiotic organism.</jobString>
    <workAmount>2500</workAmount>
    <skillRequirements>
      <Medicine>8</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MR_SymbioticInfectionImplantItem</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MR_SymbioticInfectionImplantItem</li>
      </thingDefs>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li> <!-- 혹은 BodyPartGroupDef를 사용하여 전신에 영향 주는 부위 -->
    </appliedOnFixedBodyParts>
    <addsHediff>Hediff_SymbioticInfectionBase</addsHediff> <!-- 이식 시 추가되는 헤디프 -->
    <workerClass>Maruingestible.Recipe_InstallBaseImplant_Unique</workerClass> <!-- 커스텀 워커 -->
  </RecipeDef>

