<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase" Name="MR_Building_EffectBase"  Abstract="True">
		<thingClass>Building</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>Things/Inv/MR_Invisible</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Barricades</li>
			</linkFlags>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<uiIconPath>Things/Building/Linked/Barricade_MenuIcon</uiIconPath>
		<uiIconScale>1.2</uiIconScale>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>900</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>
		<fillPercent>0</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<stealable>false</stealable>
		<statBases>
			<MaxHitPoints>800</MaxHitPoints>
			<Beauty>-3</Beauty>
			<WorkToBuild>1500</WorkToBuild>
			<Flammability>0</Flammability>
		</statBases>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<blueprintGraphicData>
				<texPath>Things/Building/Linked/Barricade_Blueprint_Atlas</texPath>
			</blueprintGraphicData>
			<deconstructible>false</deconstructible>
			<expandHomeArea>false</expandHomeArea>
			<destroyShakeAmount>0</destroyShakeAmount>
		</building>
		<filthLeaving>MR_CustomFilthA</filthLeaving>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<designationHotKey>Misc1</designationHotKey>
		<comps>
			<li Class="CompProperties_Lifespan">
				<lifespanTicks>1</lifespanTicks>
				<expireEffect>RaisedRock_Collapse</expireEffect>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(255,0,0,0)</glowColor>
			</li>
		</comps>
		<damageMultipliers>
			<li>
				<damageDef>Thump</damageDef>
				<multiplier>0.05</multiplier>
			</li>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>0.3</multiplier>
			</li>
			<li>
				<damageDef>BombSuper</damageDef>
				<multiplier>0.3</multiplier>
			</li>
		</damageMultipliers>
		<tickerType>Normal</tickerType>
	</ThingDef>
	
  <ThingDef ParentName="BaseFilth">
    <defName>MR_CustomFilthA</defName>
    <label>building rubble</label>
    <graphicData>
      <texPath>Things/Inv/MR_invisibleF</texPath>
    </graphicData>
    <filth>
      <disappearsInDays>45~50</disappearsInDays>
      <cleaningWorkToReduceThickness>35</cleaningWorkToReduceThickness>
    </filth>
  </ThingDef>
  
  <ThingDef ParentName="MR_Building_EffectBase" Name="MR_Building_Effect">
		<defName>MR_Building_EffectA</defName>
		<label>EffectA</label>
		<graphicData Inherit="false">
			<texPath>Things/Inv/MR_Invisible</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<selectable>false</selectable>
	</ThingDef>
	
	<ThingDef ParentName="MR_Building_Effect">
		<defName>MR_MaruHSIA</defName>
		<label>HSIA</label>
		<comps Inherit="false">
			<li Class="CompProperties_Lifespan">
				<lifespanTicks>1</lifespanTicks>
				<expireEffect>RaisedRock_Collapse</expireEffect>
			</li>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>0.9</explosiveRadius>
				<explosiveDamageType>MR_Pulse_HSI</explosiveDamageType>
				<damageAmountBase>1</damageAmountBase>
				<startWickHitPointsPercent>0.99</startWickHitPointsPercent>
				<explodeOnKilled>true</explodeOnKilled>
				<wickTicks>15</wickTicks>
			</li>     
		</comps>
		<killedLeavings Inherit="false">
			<MR_MaruHSIB>1</MR_MaruHSIB>
		</killedLeavings>
	</ThingDef>
	
	<ThingDef ParentName="MR_Building_Effect">
		<defName>MR_MaruHSIB</defName>
		<label>HSIB</label>
		<comps Inherit="false">
			<li Class="CompProperties_Explosive">
				<explosiveRadius>3.4</explosiveRadius>
				<explosiveDamageType>MR_ChainDamageDefA</explosiveDamageType>
				<damageAmountBase>1</damageAmountBase>
				<startWickHitPointsPercent>0.99</startWickHitPointsPercent>
				<explodeOnKilled>true</explodeOnKilled>
				<wickTicks>15</wickTicks>
			</li>
			<li Class="CompProperties_Lifespan">
				<lifespanTicks>1</lifespanTicks>
				<expireEffect>RaisedRock_Collapse</expireEffect>
			</li>
		</comps>
	</ThingDef>
	
  <FleckDef ParentName="FleckBase">
    <defName>MR_EmptyDry</defName>
    <graphicData>
      <texPath>Things/Inv/MR_Invisible</texPath>
      <shaderType>TransparentPostLight</shaderType>
      <renderInstanced>true</renderInstanced>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <solidTime>0</solidTime>
    <fadeOutTime>0.2</fadeOutTime>
  </FleckDef>
  
</Defs>