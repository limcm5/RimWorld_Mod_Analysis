  <!--푸주칼-->
  
    <RecipeDef ParentName="MR_WeaponModsBase">
    <jobString>Disassembling and reassembling weapon mods.</jobString>
    <workAmount>500</workAmount>
    <defName>MRMake_CAOtoCBO</defName>
    <label>Cleaver rebuild (Hardening->Cutting)</label>
    <description>Modify the direction of mods by reusing mods already attached to the weapon as much as possible.</description>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MR_C_AO</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>      
	  <li>
        <filter>
          <thingDefs>
            <li>MR_Sarira</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MR_C_AO</li>
        <li>MR_Sarira</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MR_C_BO>1</MR_C_BO>
    </products>
  </RecipeDef>
  
