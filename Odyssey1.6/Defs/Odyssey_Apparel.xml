      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Inv/MR_Invisible</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>MaruHideH</li>
        <li>MaruHideE</li>
        <li>SpacerMilitary</li>
        <li>Vacsuit</li>
      </tags>
      <forceEyesVisibleForRotations>
        <li>1</li>
        <li>2</li>
        <li>3</li>
      </forceEyesVisibleForRotations>
      <defaultOutfitTags>
        <li>Spacefarer</li>
      </defaultOutfitTags>
    </apparel>
    <tradeTags>
      <li>HiTechArmor</li>
      <li>Armor</li>
    </tradeTags>
