        </dataSouth>
        <dataEast>
          <layer>100</layer>
        </dataEast>
        <dataWest>
          <layer>100</layer>
        </dataWest>
      </drawData>
    </apparel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>
	</Defs>
	