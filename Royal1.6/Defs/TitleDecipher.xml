		<RoyalTitleDef ParentName="BaseMaruTitle">
			<defName>MRFT_Maru</defName>
			<label>Maru</label>
			<description>A mark of recognition as a member of the collective.</description>
			<seniority>500</seniority>
			<favorCost>6</favorCost>
			<changeHeirQuestPoints>1000</changeHeirQuestPoints>
			<allowDignifiedMeditationFocus>False</allowDignifiedMeditationFocus>
			<permitPointsAwarded>1</permitPointsAwarded>
			<awardWorkerClass>RoyalTitleAwardWorker_Instant</awardWorkerClass>
		</RoyalTitleDef>
		
		<RoyalTitleDef ParentName="BaseMaruTitle">
			<defName>MRFT_Scribe</defName>
			<label>Scribe</label>
			<description>An important position historically responsible for transcribing deciphered texts, holding symbolic meaning in Maru society.</description>
			<seniority>700</seniority>
			<favorCost>12</favorCost>
			<changeHeirQuestPoints>1000</changeHeirQuestPoints>
			<commonality>1</commonality>
			<permitPointsAwarded>2</permitPointsAwarded>
			<awardWorkerClass>RoyalTitleAwardWorker_Instant</awardWorkerClass>
		</RoyalTitleDef>
		
		<RoyalTitleDef ParentName="BaseMaruTitle">
			<defName>MRFT_Decipher</defName>
			<label>Decipher</label>
			<description>The respected title for Maru who interpret Sarira in numerous ways, valuing all methods equally and repeating experiments and research.</description>
			<seniority>900</seniority>
			<favorCost>24</favorCost>
			<minExpectation>Moderate</minExpectation>
			<changeHeirQuestPoints>1200</changeHeirQuestPoints>
			<recruitmentResistanceOffset>10</recruitmentResistanceOffset>
			<commonality>1</commonality>
			<canBeInherited>True</canBeInherited>
			<permitPointsAwarded>3</permitPointsAwarded>

			<requiredApparel>
			<li>
				<bodyPartGroupsMatchAny>
				<li>Shoulders</li>
				</bodyPartGroupsMatchAny>
				<requiredTags>
				<li>RoyalTier2</li>
                <li>MR_Deciphers</li>
				</requiredTags>
				<allowedTags>
				<li>Cape</li>
				<li>PrestigeCombatGear</li>
				<li>Psychic</li>
				</allowedTags>
			</li>
			<li>
				<bodyPartGroupsMatchAny>
				<li>Torso</li>
				</bodyPartGroupsMatchAny>
				<requiredTags>
				<li>RoyalTier2</li>
                <li>MR_Deciphers</li>
				</requiredTags>
				<allowedTags>
				<li>Cape</li>
				<li>PrestigeCombatGear</li>
				<li>Psychic</li>
				</allowedTags>
			</li>
			<li>
				<bodyPartGroupsMatchAny>
				<li>UpperHead</li>
				<li>FullHead</li>
				</bodyPartGroupsMatchAny>
				<requiredTags>
				<li>RoyalTier2</li>
                <li>MR_Deciphers</li>
				</requiredTags>
				<allowedTags>
				<li>PrestigeCombatGear</li>
				<li>Psychic</li>
				</allowedTags>
			</li>
			</requiredApparel>

			<bedroomRequirements>
			<li Class="RoomRequirement_Area">
				<area>30</area>
			</li>
			<li Class="RoomRequirement_TerrainWithTags">
				<labelKey>RoomRequirementAllFloored</labelKey>
				<tags>
				<li>Floor</li>
				<li>FineFloor</li>
				</tags>
			</li>
			<li Class="RoomRequirement_ThingAnyOf">
				<things>
				<li>DoubleBed</li>
