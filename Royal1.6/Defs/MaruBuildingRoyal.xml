  <ThingDef ParentName="BenchBase">
    <defName>MR_AnalyzerS</defName>
    <label>Analysis Workbench</label>
    <description>A workbench for direct analysis.\n\nIt can contribute to the Decipher faction through various analysis tasks.</description>
    <thingClass>Building_WorkTable</thingClass>
    <size>(3,1)</size>
    <costList>
      <MR_Sarira>4</MR_Sarira>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <graphicData>
      <texPath>Things/Building/Token/MaruAnalysisbench</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2.5,2.5)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <uiIconScale>0.75</uiIconScale>
    <castEdgeShadows>false</castEdgeShadows>
    <staticSunShadowHeight>0.0</staticSunShadowHeight>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <statBases>
      <MaxHitPoints>750</MaxHitPoints>
      <WorkToBuild>7200</WorkToBuild>
      <Flammability>1.0</Flammability>
      <ResearchSpeedFactor>1.25</ResearchSpeedFactor>
      <Beauty>5</Beauty>
    </statBases>
	    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.1</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>2</maxSimultaneous>
        <maxDistance>12</maxDistance>
      </li>
	  <li Class="CompProperties_Glower">
        <glowRadius>1</glowRadius>
        <glowColor>(73,123,138,0)</glowColor>
      </li>
    </comps>
    <!--<recipes>
      <li>ButcherCorpseFlesh</li>
      <li>Make_Kibble</li>
    </recipes>-->
	    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <paintable>true</paintable>
      <workTableRoomRole>Laboratory</workTableRoomRole>
      <workTableNotInRoomRoleFactor>1</workTableNotInRoomRoleFactor>
    </building>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <fillPercent>0.5</fillPercent>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <designationCategory>Production</designationCategory>
    <surfaceType>Item</surfaceType>
    <researchPrerequisites>
      <li>MaruRA5</li>
    </researchPrerequisites>
    <designationHotKey>Misc7</designationHotKey>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>
  
